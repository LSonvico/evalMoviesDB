<!DOCTYPE html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/stylesheets/movies.css">
</head>
<html lang="es">
<body>
	<div>
		<h1 class="banner">All Movies</h1>
	  	<div class=allbuttons>
		<form action="/movies/create" method="GET">
		<button type="submit" class='button'>Add Movie</button>
		</form>
		<form action="/movies/new" method="GET">
		<button type="submit" class='button'>New Movies</button>
		</form>
		<form action="/movies/recommended" method="GET">
		<button type="submit" class='button'>Recommended Movies</button>
		</form>
		</div>
		<form action="/movies/search" method="POST" class='searchinput'>
		<input type="text" name="name" class='searchbar' placeholder="Busca tu Pelicula">
		<button type="submit" class='searchbutton'>Buscar</button>
		</form>
	</div>
		<div>
			<article class='eachMovie'>
			<% peliculas.forEach(peliculas=> { %>
				<a href=<%="/movies/detail/" + peliculas.id %> >
				<p class=movieTitle><%= peliculas.title %></p>
				<img class='movieImage' src="/images/movieBackground.png" alt="logo">
				</a>
			<% }) %>
			</article>
		</div>
</body>	
</html>