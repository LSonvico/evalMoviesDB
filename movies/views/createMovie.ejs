<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create movie</title>
</head>
<body>
    <form action="/movies/create" method=POST>
        <div><h2>Add a movie</h2>
            <p>
            <label for="title">Title:</label>
            <input type="text" name="title" placeholder="enter the title">
            </p>
            <p>
            <label for="rating">Rating:</label>
            <input type="text" name="rating" placeholder="enter the rating">
            </p>
            <p>
            <label for="awards">Awards:</label>
            <input type="text" name="awards" placeholder="enter the awards">
            </p>
            <p>
            <label for="length">Length:</label>
            <input type="text" name="length" placeholder="enter the length">
            </p>
            <p>
            <label for="release_date">Release date</label>
            <input type="date" name="release_date" placeholder="enter the release date">
            </p>
            <label for="">Genre</label>
            <p>
            <select name="genre_id">
            <%generos.forEach(genero => {%>
            <option value="<%= genero.id %>"> <%= genero.name %></option>
            <% }) %>
            </select>
            </p>
            <label for="">Actores</label>
            <p>
            <select name="actors" multiple>
            <%actores.forEach(actor => {%>
            <option value="<%= actor.id %>"> <%= actor.first_name %> <%= actor.last_name %></option>
            <% }) %>
            </select>
            </p>
            <p>
            <button type="submit">Save changes</button>
            </p>
    </div>
    </form>
</body>
</html>